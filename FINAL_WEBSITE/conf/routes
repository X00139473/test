# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


GET     /                           controllers.HomeController.index

GET     /games                      controllers.HomeController.games

GET     /about                      controllers.HomeController.about

GET     /reviews                     controllers.HomeController.reviews

GET     /Overwatch                  controllers.HomeController.Overwatch

GET     /WarThunder                 controllers.HomeController.WarThunder

GET     /shadowOfWar                controllers.HomeController.ShadowOfWar

GET     /injustice                  controllers.HomeController.Injustice
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /stylesheets/*file          @controllers.Assets.at(path="/public/stylesheets", file)

